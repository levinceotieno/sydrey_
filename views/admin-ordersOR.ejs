<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="/styles/main.css">
  <link rel="stylesheet" href="/styles/admin-orders.css">
  <title>Manage Orders</title>
</head>
<body>
  <header>
    <h1>Order Management</h1>
  </header>
  <main class="manage-orders">
    <table>
      <thead>
        <tr>
          <th>Order ID</th>
          <th>Customer</th>
          <th>Products</th>
          <th>Quantity</th>
          <th>Total (Ksh)</th>
          <th>Address</th>
          <th>Status</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% orders.forEach(order => { %>
          <tr>
            <td><%= order.id %></td>
            <td><%= order.customer_name || 'Unknown Customer' %></td>
            <td>
              <% order.products.forEach(product => { %>
                <p><%= product.name %> (x<%= product.quantity %>)</p>
              <% }) %>
            </td>
            <td><%= order.quantity %></td>
            <td><%= order.total.toLocaleString() %></td>
            <td><%= order.delivery_address || 'No address provided' %></td>
            <td>
              <select onchange="updateStatus('<%= order.id %>', this.value)">
                <option value="pending" <%= order.status === 'pending' ? 'selected' : '' %>>Pending</option>
                <option value="processing" <%= order.status === 'processing' ? 'selected' : '' %>>Processing</option>
                <option value="shipped" <%= order.status === 'shipped' ? 'selected' : '' %>>Shipped</option>
                <option value="delivered" <%= order.status === 'delivered' ? 'selected' : '' %>>Delivered</option>
              </select>
            </td>
            <td class="actions">
              <button onclick="viewOrder('<%= order.id %>')">View</button>
              <button onclick="deleteOrder('<%= order.id %>')">Delete</button>
            </td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  </main>
  <script>
    // Function to update the status
    function updateStatus(orderId, newStatus) {
      fetch(`/admin/orders/${orderId}/update`, {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify({ status: newStatus })
      })
        .then(response => response.json())
        .then(data => alert(data.message))
        .catch(err => console.error('Error updating order:', err));
    }

    // Function to view the order
    function viewOrder(orderId) {
      window.location.href = `/admin/orders/${orderId}`;
    }

    // Function to delete the order
    function deleteOrder(orderId) {
      if (confirm('Are you sure you want to delete this order?')) {
        fetch(`/admin/orders/${orderId}/delete`, {
          method: 'DELETE'
        })
          .then(response => response.json())
          .then(data => {
            alert(data.message);
            location.reload();
          })
          .catch(err => console.error('Error deleting order:', err));
      }
    }
  </script>
</body>
</html>
