<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="/styles/main.css">
  <link rel="stylesheet" href="/styles/admin-orders.css">
  <title>Manage Orders</title>
</head>
<body>
  <header>
    <h1>Order Management</h1>
  </header>
  <main class="manage-orders">
    <table>
      <thead>
        <tr>
          <th>Order ID</th>
          <th>Customer</th>
          <th>Products</th>
          <th>Quantity</th>
          <th>Total (Ksh)</th>
          <th>Address</th>
          <th>Status</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% orders.forEach(order => { %>
          <tr>
            <td><%= order.order_id %></td>
            <td><%= order.customer_name || 'Unknown Customer' %></td>
	    <td>
	       <% if (Array.isArray(order.products) && order.products.length > 0) { %>
		 <ul>
	            <% order.products.forEach(product => { %>
	              <li><%= product.name %> (x<%= product.quantity %>)</li>
		    <% }); %>
		 </ul>
	       <% } else { %>
		 <p>No products</p>
	       <% } %>
	    </td>

	    <td>
	       <%= Array.isArray(order.products) 
	         ? order.products.reduce((total, product) => total + product.quantity, 0) 
	         : 0 %>
	    </td>
	    <td><%= order.total_price ? order.total_price.toLocaleString() : '0' %></td>
            <td><%= order.delivery_address || 'No address provided' %></td>
            <td>
              <select onchange="updateStatus('<%= order.id %>', this.value)">
                <option value="pending" <%= order.status === 'pending' ? 'selected' : '' %>>Pending</option>
                <option value="processing" <%= order.status === 'processing' ? 'selected' : '' %>>Processing</option>
                <option value="shipped" <%= order.status === 'shipped' ? 'selected' : '' %>>Shipped</option>
                <option value="delivered" <%= order.status === 'delivered' ? 'selected' : '' %>>Delivered</option>
              </select>
            </td>
            <td class="actions">
              <button onclick="viewOrder('<%= order.id %>')">View</button>
              <button onclick="deleteOrder('<%= order.id %>')">Delete</button>
            </td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  </main>
  <script>
    // Function to update the status
    async function updateStatus(orderId, newStatus) {
      try {
        const response = await fetch(`/admin/orders/${orderId}/update`, {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({ status: newStatus })
        });
        const data = await response.json();
        if (data.success) {
          alert('Order status updated successfully.');
          location.reload(); // Refresh the page to reflect changes
        } else {
          alert(data.message || 'Failed to update order status.');
        }
      } catch (err) {
        console.error('Error updating order:', err);
      }
    }

    // Function to view the order
    function viewOrder(orderId) {
      window.location.href = `/admin/orders/${orderId}`;
    }

    // Function to delete the order
    async function deleteOrder(orderId) {
      if (confirm('Are you sure you want to delete this order?')) {
        try {
          const response = await fetch(`/admin/orders/${orderId}/delete`, {
            method: 'DELETE'
          });
          const data = await response.json();
          if (data.success) {
            alert('Order deleted successfully.');
            location.reload(); // Refresh the page to reflect changes
          } else {
            alert(data.message || 'Failed to delete order.');
          }
        } catch (err) {
          console.error('Error deleting order:', err);
        }
      }
    }
  </script>
</body>
</html>
