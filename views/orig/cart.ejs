<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>My Cart</title>
  <link rel="stylesheet" href="/styles/cart.css">
</head>
<body>
  <header>
    <div class="header-container">
      <button id="toggle-menu" class="toggle-menu">â˜°</button>
      <a href="" class="logo">Sydrey Enterprise</a>
      <div class="cart-icon">
	 <span class="cart-count"><%= cartCount %></span>
      </div>
    </div>
    <nav id="nav-links" class="nav-links hidden">
       <a href="/products" class="nav-link">Products</a>
       <a href="/orders/history" class="nav-link">My Orders</a>
    </nav> 
  </header>

  <main>
    <section class="cart-content">
      <% if (cart.length > 0) { %>
        <ul class="cart-list">
          <% cart.forEach(item => { %>
            <li class="cart-item">
              <strong><%= item.name %></strong>
              - Quantity:
	      <input type="number" value="<%= item.quantity %>" id="quantity-<%= item.product_id %>" min="1" onchange="updateTotal('<%= item.product_id %>', <%= item.price %>)">
              - Price per unit: Ksh <%= item.price %>
	      - Total: <span id="total-price-<%= item.product_id %>">Ksh <%= item.totalPrice %></span>
	      <div class="cart-summary">
		  <h3>Grand Total: <span id="grand-total">Ksh <%= cart.reduce((sum, item) => sum + item.totalPrice, 0) %></span></h3>
	      </div>
              <button onclick="updateCart('<%= item.product_id %>')" class="update-btn">Update</button>
              <button onclick="removeFromCart('<%= item.product_id %>')" class="remove-btn">Remove</button>
            </li>
          <% }) %>
        </ul>
        <button id="checkout-btn" class="primary-btn">Checkout</button>
      <% } else { %>
        <p>Your cart is empty.</p>
      <% } %>
    </section>

    <!-- Modal -->
    <div id="checkout-modal" class="modal hidden">
      <div class="modal-content">
        <span id="close-modal" class="close-btn">&times;</span>
        <h2>Checkout</h2>
        <form id="checkout-form">
          <fieldset>
            <legend>Delivery Location</legend>
            <label>
              <input type="radio" name="deliveryLocation" value="withinKenya" required>
              Within Kenya
            </label>
            <label>
              <input type="radio" name="deliveryLocation" value="outsideKenya">
              Outside Kenya
            </label>
          </fieldset>
          <label for="deliveryAddress">Delivery Address:</label>
          <input type="text" id="deliveryAddress" name="deliveryAddress" placeholder="Enter your delivery address" required>
          <button type="submit" class="primary-btn">Place Order</button>
        </form>
      </div>
    </div>
  </main>

  <script>
     const userId = <%= JSON.stringify(userId) %>;
  </script>
  <script>

    function updateTotal(productId, pricePerUnit) {
	const quantityInput = document.getElementById(`quantity-${productId}`);
	const totalPriceElement = document.getElementById(`total-price-${productId}`);
	const grandTotalElement = document.getElementById('grand-total');

	const quantity = parseInt(quantityInput.value, 10);
	
	if (isNaN(quantity) || quantity < 1) {
	   quantityInput.value = 1; // Reset to 1 if the value is invalid
	   return;
	}

	const totalPrice = quantity * pricePerUnit;

	// Update the total price for this product
	totalPriceElement.textContent = `Ksh. ${totalPrice}`;

	// Update the grand total
	let grandTotal = 0;
	const allTotalPriceElements = document.querySelectorAll('[id^="total-price-"]');
	allTotalPriceElements.forEach(element => {
	    const price = parseFloat(element.textContent.replace('Ksh. ', ''));
	    if (!isNaN(price)) {
		grandTotal += price;
	    }
	});

	grandTotalElement.textContent = `Ksh. ${grandTotal}`;
    }

    // Toggle menu
    document.getElementById('toggle-menu').addEventListener('click', () => {
      document.querySelector('.nav-links').classList.toggle('visible');
    });
  </script>
  <script src="/js/toggle.js"></script>
  <script src="/js/orders.js"></script>
  <script src="/js/checkout.js"></script>
</body>
</html>
