<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Sydrey Enterprise - Admin Dashboard</title>
  <link rel="stylesheet" href="/styles/admin.css">
  <link rel="stylesheet" href="/styles/new-menu.css">
</head>
<body>
  <div class="menu-backdrop" id="menu-backdrop"></div>
  
  <!-- Navbar Section -->
  <div class="navbar-container">
    <div class="navbar">
      <!-- Menu Toggle -->
      <div class="menu-toggle" id="new-menu-toggle">â˜°</div>

      <!-- Brand Name -->
      <div class="logo">Sydrey Enterprise</div>

      <!-- Admin Profile -->

    </div>
  </div>

  <!-- Dropdown Menu -->
  <nav class="new-menu" id="new-menu">
    <ul>
      <% if (user) { %>
        <li><a href="/">Home</a></li>
        <li><a href="/products">Products</a></li>
        <li><a href="/admin/orders">Orders</a></li>
        <li><a href="/bookings/admin">Bookings</a></li>
        <li><a href="/blogs/new">Create Blog</a></li>
        <li>
          <form method="POST" action="/auth/admin/logout" class="logout-form">
            <button type="submit" class="logout-btn">Logout</button>
          </form>
        </li>
      <% } %>
    </ul>
  </nav>

  <!-- Main Admin Dashboard -->
  <div class="admin-dashboard">
    <div class="dashboard-header">
      <h1>Admin Dashboard</h1>
      <p>Manage your Sydrey Enterprise platform</p>
    </div>

    <!-- Quick Stats -->
    <div class="quick-stats">
      <div class="stat-card">
        <h3>Total Products</h3>
        <p><%= products.length %></p>
      </div>
      <div class="stat-card">
        <h3>Total Orders</h3>
        <p>1</p>
      </div>
      <div class="stat-card">
        <h3>Total Users</h3>
        <p>3</p>
      </div>
    </div>

    <!-- Product Management Section -->
    <div class="product-management">
      <h2>Product Management</h2>
      
      <!-- Add Product Form -->
      <div class="add-product-section">
        <h3>Add New Product</h3>
        <form 
          action="/admin/add-product" 
          method="POST" 
          enctype="multipart/form-data" 
          class="product-form"
        >
          <div class="form-grid">
            <input 
              type="text" 
              name="name" 
              placeholder="Product Name" 
              required 
            />
            <input 
              type="number" 
              name="price" 
              placeholder="Price" 
              required 
            />
            <input 
              type="text" 
              name="quantity" 
              placeholder="Quantity" 
              required 
            />
            <select name="category" required>
              <option value="">Select Category</option>
              <option value="wholesale">Wholesale</option>
              <option value="retail">Retail</option>
            </select>
            <textarea 
              name="description" 
              placeholder="Product Description" 
              required
            ></textarea>
            <input 
              type="file" 
              name="image" 
              accept="image/*" 
              required 
            />
          </div>
          <button type="submit" class="submit-btn">Add Product</button>
        </form>
      </div>

      <!-- Product List -->
      <div class="product-list">
        <h3>Existing Products</h3>
        <div class="products-grid">
          <% products.forEach(product => { %>
            <div class="product-card">
              <img 
                src="<%= product.image_url %>" 
                alt="<%= product.name %>" 
                class="product-image"
              >
              <div class="product-details">
                <h4><%= product.name %></h4>
                <p><%= product.description %></p>
                <div class="product-meta">
                  <span class="price">Ksh. <%= product.price %></span>
                  <span class="category <%= product.category %>">
                    <%= product.category.charAt(0).toUpperCase() + product.category.slice(1) %>
                  </span>
                </div>
                
                <!-- Edit Form -->
                <form 
                  action="/admin/edit-product/<%= product.id %>" 
                  method="POST" 
                  enctype="multipart/form-data" 
                  class="edit-form"
                >
                  <div class="edit-form-grid">
                    <input 
                      type="text" 
                      name="name" 
                      value="<%= product.name %>" 
                      placeholder="Product Name" 
                      required 
                    />
                    <textarea 
                      name="description" 
                      placeholder="Description" 
                      required
                    ><%= product.description %></textarea>
                    <input 
                      type="number" 
                      name="price" 
                      value="<%= product.price %>" 
                      placeholder="Price" 
                      required 
                    />
                    <input 
                      type="text" 
                      name="quantity" 
                      value="<%= product.quantity %>" 
                      placeholder="Quantity" 
                      required 
                    />
                    <select name="category" required>
                      <option 
                        value="wholesale" 
                        <%= product.category === 'wholesale' ? 'selected' : '' %>
                      >
                        Wholesale
                      </option>
                      <option 
                        value="retail" 
                        <%= product.category === 'retail' ? 'selected' : '' %>
                      >
                        Retail
                      </option>
                    </select>
                    <input 
                      type="file" 
                      name="image" 
                      accept="image/*" 
                    />
                    <button type="submit" class="edit-btn">Save Changes</button>
                  </div>
                </form>

                <!-- Delete Form -->
                <form 
                  action="/admin/delete-product/<%= product.id %>" 
                  method="POST" 
                  class="delete-form"
                >
                  <button type="submit" class="delete-btn">Delete</button>
                </form>
              </div>
            </div>
          <% }); %>
        </div>
      </div>
    </div>
  </div>

  <script src="/js/menu.js" defer></script>
</body>
</html>
