<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Admin Dashboard</title>
  <link rel="stylesheet" href="/styles/admin.css">
</head>
<body>
  <header class="admin-header">
    <h1>Admin Dashboard</h1>
    <h2>Welcome, <%= user.name %> (Admin)</h2>
    <p>You can manage the platform here.</p>
    <div class="actions">
      <form action="/auth/admin/logout" method="POST">
        <button type="submit" class="logout-btn">Logout</button>
      </form>
      <a href="/products" class="link-btn">Go to Products</a>
      <a href="/admin/orders" class="link-btn">View Orders</a>
    </div>
  </header>
  
  <main>
    <section class="add-product">
      <h3>Add a New Product</h3>
      <form action="/admin/add-product" method="POST" enctype="multipart/form-data" class="product-form">
        <input type="text" name="name" placeholder="Product Name" required />
        <textarea name="description" placeholder="Description" required></textarea>
        <input type="number" name="price" placeholder="Price" required />
        <input type="text" name="quantity" placeholder="Quantity" required />
        <select name="category" required>
          <option value="wholesale">Wholesale</option>
          <option value="retail">Retail</option>
        </select>
        <input type="file" name="image" accept="image/*" required />
        <button type="submit" class="submit-btn">Add Product</button>
      </form>
    </section>

    <hr>

    <section class="product-list">
      <% products.forEach(product => { %>
        <div class="product-item">
          <h3><%= product.name %></h3>
          <p><%= product.description %></p>
          <img src="<%= product.image_url %>" alt="<%= product.name %>" />
          <form action="/admin/edit-product/<%= product.id %>" method="POST" enctype="multipart/form-data" class="edit-form">
            <input type="text" name="name" value="<%= product.name %>" placeholder="Product Name" required />
            <textarea name="description" placeholder="Description" required><%= product.description %></textarea>
            <input type="number" name="price" value="<%= product.price %>" placeholder="Price" required />
            <input type="text" name="quantity" value="<%= product.quantity %>" placeholder="Quantity" required />
            <select name="category" required>
              <option value="wholesale" <%= product.category === 'wholesale' ? 'selected' : '' %>>Wholesale</option>
              <option value="retail" <%= product.category === 'retail' ? 'selected' : '' %>>Retail</option>
            </select>
            <input type="file" name="image" accept="image/*" />
            <button type="submit" class="submit-btn">Save Changes</button>
          </form>
          <form action="/admin/delete-product/<%= product.id %>" method="POST" class="delete-form">
            <button type="submit" class="delete-btn">Delete</button>
          </form>
        </div>
      <% }); %>
    </section>
  </main>
</body>
</html>
